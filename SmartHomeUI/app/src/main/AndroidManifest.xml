<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.user.smarthomeui">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LightActivity"
            android:launchMode="singleInstance"
            android:label="@string/light"/>
        <activity
            android:name=".CheckActivity"
            android:label="@string/check"/>
        <activity
            android:name=".HelpActivity"
            android:label="@string/help"/>
        <activity
            android:name=".MonitorActivity"
            android:launchMode="singleInstance"
            android:label="@string/monitor"/>
        <activity
            android:name=".WarningActivity"
            android:label="@string/warning"/>
        <activity
            android:name=".ConnectActivity"
            android:label="@string/connect"/>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/history"/>
        <activity
            android:name=".NewapplianceActivity"
            android:label="@string/new_appliance"/>
        <activity
            android:name=".ConditionerActivity"
            android:launchMode="singleInstance"
            android:label="@string/conditioner">
        </activity>
        <activity
            android:name=".MicrophoneActivity"
            android:launchMode="singleInstance"
            android:label="@string/microphone">
        </activity>
        <activity android:name=".InfoActivity"
        android:label="@string/info">
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>